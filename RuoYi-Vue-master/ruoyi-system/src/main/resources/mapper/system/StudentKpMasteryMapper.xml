    <select id="selectStudentLearnStatus" resultType="com.ruoyi.system.domain.vo.StudentLearnStatusVo">
        SELECT
            skm.student_user_id AS studentUserId,
            skm.course_id AS courseId,
            skm.kp_id AS kpId,
            kp.title AS kpTitle,
            skm.mastery_status AS masteryStatus,
            -- 保留百分比修复
            CONCAT(ROUND(skm.accuracy, 2), '%') AS accuracy,
            a.id AS assignmentId,
            -- 保留错题序号拼接修复
            IF(
                    GROUP_CONCAT(DISTINCT aq.sequence ORDER BY aq.sequence SEPARATOR '、') IS NULL,
                    '无',
                    CONCAT(
                            '第',
                            TRIM(TRAILING '、第' FROM GROUP_CONCAT(DISTINCT aq.sequence ORDER BY aq.sequence SEPARATOR '题、第')),
                            '题'
                        )
                ) AS wrongQuestionNo
        FROM
            student_kp_mastery skm
                LEFT JOIN knowledge_point kp
                          ON skm.kp_id = kp.id
                              AND kp.is_deleted = 0
                -- 关键修改：删除 ak.is_deleted = 0（assignment_kp 表无该字段）
                LEFT JOIN assignment_kp ak
                          ON skm.kp_id = ak.kp_id
                LEFT JOIN assignment a
                          ON ak.assignment_id = a.id
                              AND a.course_id = skm.course_id
                              AND a.status = 1
                              AND a.is_deleted = 0
                LEFT JOIN student_answer sa
                          ON skm.student_user_id = sa.student_user_id
                              AND sa.assignment_id = a.id
                              AND sa.is_correct = 0
                              AND sa.is_deleted = 0
                LEFT JOIN assignment_question aq
                          ON sa.assignment_id = aq.assignment_id
                              AND sa.question_id = aq.question_id
                              AND aq.is_deleted = 0
        WHERE
            skm.student_user_id = #{studentUserId}
          AND skm.course_id = #{courseId}
          AND skm.mastery_status IN ('weak', 'learning')
          AND skm.is_deleted = 0
        GROUP BY
            skm.student_user_id,
            skm.course_id,
            skm.kp_id,
            kp.id,
            kp.title,
            skm.mastery_status,
            skm.accuracy,
            a.id
        ORDER BY
            CASE skm.mastery_status WHEN 'weak' THEN 1 WHEN 'learning' THEN 2 END,
            skm.accuracy ASC
    </select>
    <!-- 查询同课程其他学生的ID（排除当前学生） -->
