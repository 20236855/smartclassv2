<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.StudentAnswerMapper">
    <resultMap type="com.ruoyi.system.domain.StudentAnswer" id="StudentAnswerResult">
        <result property="id" column="id"/>
        <result property="studentUserId" column="student_user_id"/>
        <result property="assignmentId" column="assignment_id"/>
        <result property="questionId" column="question_id"/>
        <result property="answerContent" column="answer_content"/>
        <result property="isCorrect" column="is_correct"/>
        <result property="score" column="score"/>
        <result property="answerTime" column="answer_time"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="deleteTime" column="delete_time"/>
    </resultMap>

    <sql id="selectStudentAnswerVo">
        select id, student_user_id, assignment_id, question_id, answer_content,
               is_correct, score, answer_time, is_deleted, delete_time,
        from student_answer
    </sql>

    <!-- 根据学生ID和作业ID查询答题记录 -->
    <select id="selectByUserIdAndAssignmentId" resultMap="StudentAnswerResult">
        <include refid="selectStudentAnswerVo"/>
        where student_user_id = #{studentUserId}
        and assignment_id = #{assignmentId}
        and is_deleted = 0
        order by answer_time asc
    </select>
</mapper>
