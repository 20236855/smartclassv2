<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.CompetencyKpRelationMapper">
    <resultMap type="com.ruoyi.system.domain.CompetencyKpRelation" id="CompetencyKpRelationResult">
        <result property="id" column="id"/>
        <result property="competencyId" column="competency_id"/>
        <result property="kpId" column="kp_id"/>
        <result property="contributionRate" column="contribution_rate"/>
        <result property="createTime" column="create_time"/>
        <result property="isDeleted" column="is_deleted"/>
    </resultMap>

    <sql id="selectCompetencyKpRelationVo"> select id, competency_id, kp_id, contribution_rate, create_time, is_deleted from competency_kp_relation </sql>

    <!-- 修正：parameterType补全全类名 com.ruoyi.system.domain.CompetencyKpRelation -->
    <select id="selectCompetencyKpRelationList" parameterType="com.ruoyi.system.domain.CompetencyKpRelation" resultMap="CompetencyKpRelationResult">
        <include refid="selectCompetencyKpRelationVo"/>
        <where>
            <if test="competencyId != null "> and competency_id = #{competencyId}</if>
            <if test="kpId != null "> and kp_id = #{kpId}</if>
            <if test="contributionRate != null "> and contribution_rate = #{contributionRate}</if>
            <if test="isDeleted != null "> and is_deleted = #{isDeleted}</if>
        </where>
    </select>

    <select id="selectCompetencyKpRelationById" parameterType="Long" resultMap="CompetencyKpRelationResult">
        <include refid="selectCompetencyKpRelationVo"/>
        where id = #{id}
    </select>

    <!-- 修正：parameterType补全全类名 -->
    <insert id="insertCompetencyKpRelation" parameterType="com.ruoyi.system.domain.CompetencyKpRelation" useGeneratedKeys="true" keyProperty="id">
        insert into competency_kp_relation
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="competencyId != null">competency_id,</if>
            <if test="kpId != null">kp_id,</if>
            <if test="contributionRate != null">contribution_rate,</if>
            <if test="createTime != null">create_time,</if>
            <if test="isDeleted != null">is_deleted,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="competencyId != null">#{competencyId},</if>
            <if test="kpId != null">#{kpId},</if>
            <if test="contributionRate != null">#{contributionRate},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="isDeleted != null">#{isDeleted},</if>
        </trim>
    </insert>

    <!-- 修正：parameterType补全全类名 -->
    <update id="updateCompetencyKpRelation" parameterType="com.ruoyi.system.domain.CompetencyKpRelation">
        update competency_kp_relation
        <trim prefix="SET" suffixOverrides=",">
            <if test="competencyId != null">competency_id = #{competencyId},</if>
            <if test="kpId != null">kp_id = #{kpId},</if>
            <if test="contributionRate != null">contribution_rate = #{contributionRate},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteCompetencyKpRelationById" parameterType="Long"> delete from competency_kp_relation where id = #{id} </delete>

    <delete id="deleteCompetencyKpRelationByIds" parameterType="String">
        delete from competency_kp_relation where id in
        <foreach item="id" collection="array" open="(" separator="," close=")"> #{id} </foreach>
    </delete>

    <select id="getCompetencyRadarData" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            cc.id AS competencyId,
            cc.competency_name AS competencyName,
            ROUND(
                        IFNULL(SUM(skm.mastery_score * cc.weight * ckr.contribution_rate), 0)
                        / IFNULL(SUM(cc.weight * ckr.contribution_rate), 1),
                        1
                ) AS competencyScore
        FROM course_competency cc
                 LEFT JOIN competency_kp_relation ckr
                           ON cc.id = ckr.competency_id
                               AND ckr.is_deleted = 0
                 LEFT JOIN student_kp_mastery skm
                           ON ckr.kp_id = skm.kp_id
                               AND skm.student_user_id = #{studentId}  -- 这里改成 studentId（和可用参数一致）
                               AND skm.course_id = #{courseId}
                               AND skm.is_deleted = 0
        WHERE cc.course_id = #{courseId}
          AND cc.is_deleted = 0
        GROUP BY cc.id, cc.competency_name, cc.weight
    </select>
</mapper>
