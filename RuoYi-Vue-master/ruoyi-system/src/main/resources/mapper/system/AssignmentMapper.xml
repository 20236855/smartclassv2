<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.AssignmentMapper">

    <!-- 根据ID查询作业核心信息（仅查需要的字段，提升性能） -->
    <select id="selectAssignmentById" resultType="com.ruoyi.system.domain.Assignment">
        SELECT
            id,
            title,
            course_id AS courseId,
            is_deleted AS isDeleted
        FROM assignment
        WHERE id = #{id}
          AND is_deleted = 0 -- 只查未删除的作业
    </select>

</mapper>
