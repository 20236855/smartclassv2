    <!-- 修正：parameterType补全全类名 -->
    <update id="updateCourseCompetency" parameterType="com.ruoyi.system.domain.CourseCompetency">
        update course_competency
        <trim prefix="SET" suffixOverrides=",">
            <if test="courseId != null">course_id = #{courseId},</if>
            <if test="competencyName != null and competencyName != ''">competency_name = #{competencyName},</if>
            <if test="competencyDesc != null">competency_desc = #{competencyDesc},</if>
            <if test="sortOrder != null">sort_order = #{sortOrder},</if>
            <if test="weight != null">weight = #{weight},</if>
