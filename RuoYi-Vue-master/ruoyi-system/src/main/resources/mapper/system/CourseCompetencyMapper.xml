            <if test="isDeleted != null">is_deleted,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="courseId != null">#{courseId},</if>
            <if test="competencyName != null and competencyName != ''">#{competencyName},</if>
            <if test="competencyDesc != null">#{competencyDesc},</if>
