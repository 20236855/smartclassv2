            <if test="courseId != null "> and course_id = #{courseId}</if>
            <if test="competencyName != null and competencyName != ''"> and competency_name like concat('%', #{competencyName}, '%')</if>
            <if test="competencyDesc != null and competencyDesc != ''"> and competency_desc = #{competencyDesc}</if>
            <if test="sortOrder != null "> and sort_order = #{sortOrder}</if>
            <if test="weight != null "> and weight = #{weight}</if>
            <if test="isDeleted != null "> and is_deleted = #{isDeleted}</if>
        </where>
    </select>

    <select id="selectCourseCompetencyById" parameterType="Long" resultMap="CourseCompetencyResult">
        <include refid="selectCourseCompetencyVo"/>
