<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.AssignmentKpMapper">

    <!-- 根据知识点ID集合查询关联的题目ID -->
    <select id="selectQuestionIdsByKpIds" parameterType="java.util.List" resultType="java.lang.Long">
        select distinct aq.question_id
        from assignment_kp ak
        left join assignment_question aq on ak.assignment_id = aq.assignment_id
        where ak.kp_id in
        <foreach collection="kpIds" item="kpId" open="(" separator="," close=")">
            #{kpId}
        </foreach>
        and aq.is_deleted = 0
    </select>
</mapper>
